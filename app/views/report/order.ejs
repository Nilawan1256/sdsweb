<div class="content">
  <div class="container-fluid">

      <div class="row">
          <div class="col-lg-3 col-md-5">
              <div class="card card-user">
                  <br />
                  <div class="content">
                      <div class="author">
                          <img class="avatar border-white" src="/assets/img/faces/face-report.jpg" alt="...">
                          <h4 class="title">
                              รายงานการบริจาค<br>
                          </h4>
                      </div>
                      <ul class="leftnav">
                          <li>
                              <p class="description">
                                  <a href="/report/donor">รายงานผู้ร่วมบุญ</a>
                              </p>
                          </li>
                          <li>
                              <p class="description">
                                  <a href="/report/order">รายงานการบริจาค</a>
                              </p>
                          </li>
                          <li>
                              <p class="description">
                                  <a href="/report/revenue">รายงานรายรับ</a>
                              </p>
                          </li>
                      </ul>
                  </div>
              </div>
              <div class="card card-user">
                  <br />
                  <div class="content" style="min-height:0;">
                      <div class="author" style="padding-top:50px">                                        
                          <h4 class="title">
                              รายงาน SMS<br>
                          </h4>
                      </div>
                      <ul class="leftnav">
                          <li>
                              <p class="description">
                                  <a href="/report/smssends">รายงานการส่ง SMS</a>
                              </p>
                          </li>
                          <li>
                              <p class="description">
                                  <a href="/report/smsreply">รายงานการตอบกลับ SMS</a>
                              </p>
                          </li>
                          <li>
                              <p class="description">
                                  <a href="/report/smssummary">รายงานสรุปการส่ง SMS</a>
                              </p>
                          </li>
                      </ul>
                  </div>
              </div>
          </div>
          <div class="col-lg-9 col-md-7">
            <div class="card">
                <div class="header">
                    <h4 class="title">รายงานการบริจาค</h4>
                    <p class="category"></p>
                </div>
                <div class="content">
                    <form method="get" action="/report/search_order" class="search-container" onsubmit="return validateForm()">
                        
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>วันที่</label>
                                        <input class="form-control border-input" placeholder="วันที่รับล่าสุด" type="date" name="f_date" id="f_date">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="width:40px!important; text-align:left">-</label>
                                        <input class="form-control border-input" placeholder="วันที่รับล่าสุด" type="date" name="l_date" id="l_date">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>จุดตั้งรับ</label>
                                        
                                        <select class="form-control border-input" name="ser_point">
                                            <% data.lov_ser_point.forEach(data => { %> 
                                                <option value="<%= data.id%>"><%= data.text%></option>
                                                <% }) %>
                                       

                                        </select>
                                        
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label style="width:40px!important; text-align:left">สถานะ</label>
                                        <select class="form-control border-input" name="status">

                                            <% data.sql_lov_pay_status.forEach(data => { %> 
                                                <option value="<%= data.id%>"><%= data.text%></option>
                                                <% }) %>

                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 left">
                                    <div class="form-group">
                                        <label style="width:40px!important; text-align:left">&nbsp;</label>
                                        <button type="submit" class="btn btn-info btn-fill">ค้นหา</button>
                                    </div>
                                    
                                </div>
                            </div>
                        
                    </form>
                </div>
                <div class="content table-responsive table-full-width">
                    <div class="content right"><a class="btn" href="#">Export to excel</a></div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ชื่อ นามสกุล</th>
                                <th>โทรศัพท์</th>
                                <th>วันที่</th>
                                <th>จุดตั้งรับ</th>
                                <th>สถานะ</th>
                            </tr>
                        </thead>
                        <% data.order.forEach(data => { %>
                            <tbody>
                              <tr>
                              <td><%=data.firstname%> <%=data.lastname%></td>
                              <td><%=data.phone%></td>
                              <td><%=data.create_date%></td>
                              <td><%=data.lov_service_point_id%></td>
                              <td><%=data.lov_payment_status%></td>
                              </tr>
                            </tbody>
                        <% }) %>
                    </table>

                    <div class="content right">
                        <ul class="pagination">
                            <li><a href="#"><<</a></li>
                            <li><a href="#"><</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">></a></li>
                            <li><a href="#">>></a></li>
                        </ul>
                    </div>

                </div>
            </div>                                                        
        </div>

      </div>

  </div>
</div>