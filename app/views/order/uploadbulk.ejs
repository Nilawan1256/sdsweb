<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">ศูนย์ตั้งรับ อัพโหลดข้อมูลรายการบริจาค</h4>
                    </div>
                    <div class="content">
                        <!-- <form id="uploadForm" enctype="multipart/form-data" action="/order/uploadbulk/save" method="post">
                            <input type="file" webkitdirectory mozdirectory msdirectory odirectory directory multiple
                                class="form-control" style="padding:0" name="myfile" />
                            <input type="submit" value="Upload Image" name="submit" /><br /><br />
                            <span id="status"></span>
                        </form> -->

                        <form id="uploadForm" enctype="multipart/form-data" action="/order/uploadbulk/save" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>จุดตั้งรับ</label>
                                        <select class="form-control border-input" name="point">
                                            <option value="" disabled selected hidden >กรุณาเลือกจุดตั้งรับ</option>
                                            <% data.service_point_id.forEach(data => { %> 
                                                <option value="<%= data.id%>"><%= data.text%></option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- ------------------------------------------------------------------------------------------- -->
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>สถานะผู้ร่วมบุญ</label>
                                        <select class="form-control border-input" name="donor_status">
                                            <%
                                                var select = [];
                                                data.sql_lov_donor_verify_status_id.forEach(data => {
                                                        select.true = "";
                                            %>
                                            <option value="<%= data.id%>" <%= select.true %>><%= data.text %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                              </div>
                            <!-- -------------------------------------------------------------------------------------- -->
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>สถานะการบริจาค</label>
                                        <select class="form-control border-input" name="order_status">
                                            <%
                                                var select = [];
                                                data.sql_lov_order_verify_status_id.forEach(data => {
                                                        select.true = "";
                                            %>
                                            <option value="<%= data.id%>" <%= select.true %>><%= data.text %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                              </div>
                            <!-- -------------------------------------------------------------------------------------- -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>เลือกโฟลเดอร์รูปภาพ</label>  
                                        <input type="file" webkitdirectory mozdirectory msdirectory odirectory directory multiple class="form-control" style="padding:0" name="myfile"/>
                                    </div>
                                    <span id="status"></span>
                                </div>
                            </div>
                            
                            <div>
                                <button type="submit" class="btn btn-info btn-fill btn-wd" value="Upload Image" name="submit">อัพโหลดไฟล์</button>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
<script>
    $(document).ready(function () {
        $("#uploadForm").submit(function () {
            $("#status")
                .empty()
                .text("File is uploading...");
            $(this).ajaxSubmit({
                error: function (xhr) {
                    status("Error: " + xhr.status);
                },
                success: function (response) {
                    console.log(response);
                    $("#status")
                        .empty()
                        .text(response);
                }
            });
            return false;
        });
    });
</script>