                            <div class="col-md-12">
                                <% dataedit.order.forEach(data => { %>
                                <h5><small>สถานะการชำระเงิน</small> <span class="alert alert-warning"><%=data.lov_payment_status%></span></h5>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
  
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">ข้อมูลโครงการบริจาค</h4>
                    </div>
                    <div class="content">
                        <form action="/order/save" method="POST">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>จุดตั้งรับ</label>
                                        <select class="form-control border-input" name="servicepoint">
                                            <% dataedit.order.forEach(data => { %>
                                            <option value="<%=data.lov_service_point_id%>"><%=data.lov_service_point_id%></option>
                                            <% }) %>
                                            <option value="32">ธรรมสวัสดี</option>
                                            <option value="36">ลานโพธิ์</option>
                                            <option value="34">ถ้ำอารยตารา</option>
                                            <option value="30">สำนักงาน</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <% dataedit.order.forEach(data => { %>
                                        <label>โครงการบริจาค</label>
                                        <input class="form-control border-input" placeholder="Company"  type="text" name="ordername" value="<%=data.order_name%>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>ยอดร่วมทำบุญ (บาท)</label>
                                        <input class="form-control border-input" placeholder="กรุณากรอกตัวเลข" type="number" name="total" value="<%=data.total%>">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>โครงการ</label>
                                        <select class="form-control border-input" name="product_group">
                                            <option value="<%=data.product_group_id%>"><%=data.product_group_id%></option>
                                            <option value="1">โมลด์</option>
                                        </select>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>ของที่ระลึกโครงการ</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="product1" value="1">โมลด์กรีนดารา</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="product2" value="2">ดอกบัว</label>
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox" name="product3" value="3">พระกริ่ง</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>ประเภทการชำระเงิน</label>
                                        <select class="form-control border-input" name="paymentstatus">
                                            <option value="27">เงินสด</option>
                                            <option value="28">โอนผ่านบัญชีธนาคาร</option>
                                            <option value="29">บัตรเครดิต</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>จำนวนงวดการชำระเงิน</label>
                                        <input class="form-control border-input" placeholder="จำนวนงวดการชำระเงิน"  type="text" name="paymentperiod" value="<%=data.payment_period%>">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <a href="#" class="btn btn-default btn-fill">ตั้งค่างวดการชำระเงิน</a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>สถานะการชำระเงิน</label>
                                        <select class="form-control border-input" name="paymenttype">
                                            <option value="<%=data.lov_payment_status%>"><%=data.lov_payment_status%></option>
                                            <option value="33">ค้างชำระ</option>
                                            <option value="34">ชำระครบ</option>
                                            <option value="35">ยุติการตาม</option>
                                            <option value="36">มอบให้ตาราอวอร์ด</option>
                                            <option value="37">มอบให้แขกพิเศษ</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>หมายเหตุ</label>
                                        <textarea rows="2" class="form-control border-input" placeholder="Here can be your description" value="" name="comment"><%=data.comment%></textarea>
                                        <!-- <a class="btn btn-info btn-fill addnew" type="submit">บันทึก</a> -->
                                        
                                        <br><button class="btn btn-info btn-fill addnew"  type="submit" value="<%=data.id%>">บันทึก</button>
                                        <% }) %>  
                                    </div>
                                </div>
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
  
        </div>
        <div class="row">
            <div class="col-md-12">
