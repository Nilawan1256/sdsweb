<div class="content">
  <div class="container-fluid">
      
      <div class="row">
          <div class="col-md-12">
              <div class="card">
                  <div class="header">
                      <h4 class="title">รายการสมาชิกผู้ร่วมบุญ</h4>
                      <p class="category"></p>
                  </div>
                  <div class="row content-container">     
                      <form method="get" action="/donor" class="search-container">
                          <div class="col-md-6 tex">
                              <div class="form-group">
                                  <label>ค้นหา</label>
                                  <input class="form-control border-input" placeholder="ค้นหา ชื่อ หรือ นามสกุล" value="" type="text" name="q" id="search">
                                </div>
                          </div>
                          <div class="col-md-2 left">
                              <a class="btn btn-info btn-fill addnew" href="/donor/edit" target="_blank">เพิ่มสมาชิก</a>
                          </div>
                      </form>
                  </div>
                  <div class="content table-responsive table-full-width">
                      <table class="table table-striped">
                          <thead>
                              <tr>
                                  <th>ชื่อ นามสกุล</th>
                                  <th>โทรศัพท์</th>
                                  <th>ไลน์</th>
                                  <th>อีเมล์</th>
                                  <th></th>
                                  <th></th>
                              </tr>
                          </thead>
                          <tbody>
                            <% data.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.firstname %> <%= data.lastname %></td>
                                    <td><%= data.phone %></td>
                                    <td><%= data.line %></td>
                                    <td><%= data.email %></td>
                                    <td><a class="btn btn-warning" type="submit" onclick="deleted('<%= data.id %>')">ลบ</a></td>
                                    <td><a href="/donor/edit?id=<%= data.id %>" class="btn btn-default">แก้ไข</a></td>
                                </tr>
                            <% }); %>
                              
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
      
  </div>
</div>