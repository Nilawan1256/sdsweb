<div class="content">
  <div class="container-fluid">

      <div class="row">
          <div class="col-lg-4 col-md-5">
              <div class="card card-user">
                  <div class="image">
                      <img src="/assets/img/background.jpg" alt="...">
                  </div>
                  <div class="content">
                      <div class="author">
                          <img class="avatar border-white" src="/assets/img/faces/face-1.jpg" alt="...">
                          <h4 class="title">
                            <%= data[0].firstname%> <%= data[0].lastname%><br>
                          </h4>
                      </div>
                      <p class="description text-center" ><%= data[0].comment%></p>
                      <p class="text-center"><a href="/order/edit?id=<%= data[0].id %>" target="_blank">ข้อมูลการบริจาค</a></p>
                  </div>
                  <hr>
                  <div class="text-center">
                      <div class="row">
                          <div class="col-md-12">
                              <h5><small>สมัครสมาชิกเมื่อ</small> : <%= data[0].create_date%></h5>
                          </div>
                      </div>
                  </div>
              </div>

          </div>
          <div class="col-lg-8 col-md-7">
              <div class="card">
                  <div class="header">
                      <h4 class="title">Edit Profile</h4>
                  </div>
                  <div class="content">
                      <form action="/donor/save" method="POST">
                          <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>คำหน้า</label>
                                    <select class="form-control border-input" name="prefix">
                                        <option value="" disabled selected hidden >กรุณาเลือกคำนำหน้า</option>
                                        <%
                                            var select = [];
                                            var options = data[0].prefix;
                                            data.sql_lov_prefix.forEach(data => {
                                            if (data.text == options){
                                                select.true = "selected";
                                            }
                                            else{
                                                select.true = "";
                                            }
                                        %>
                                        <option value="<%= data.id%>" <%= select.true %>><%= data.text %></option>
                                        <% }) %>
                                    </select>

                                </div>
                            </div>
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label>ชื่อ</label>
                                      <input class="form-control border-input" placeholder="ชื่อ" value="<%= data[0].firstname %>" type="text" name="fname">
                                  </div>
                              </div>
                              <div class="col-md-5">
                                  <div class="form-group">
                                      <label>นามสกุล</label>
                                      <input class="form-control border-input" placeholder="นามสกุล" value="<%= data[0].lastname %>" type="text" name="lname">
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  <div class="form-group">
                                      <label>ที่อยู่</label>
                                      <textarea class="form-control border-input" placeholder="ที่อยู่" name="address"><%= data[0].address %></textarea>
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>เมือง</label>
                                    <input class="form-control border-input" placeholder="เมือง" value="<%= data[0].state %>" type="text" name="state">
                                </div>
                            </div>
                               <div class="col-md-4">
                                    <div class="form-group">
                                        <label>ประเทศ</label>
                                        <select class="form-control border-input" name="country">
                                                <option value="" disabled selected hidden >กรุณาเลือกประเทศ</option>
                                                <%
                                                var select = [];
                                                var options = data[0].country;
                                                data.sql_lov_country.forEach(data => {
                                                if (data.text == options){
                                                    select.true = "selected";
                                                }
                                                else{
                                                    select.true = "";
                                                }
                                            %>
                                                <option value="<%= data.id%>" <%= select.true %>><%= data.text %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </div>
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label>รหัสไปรษณีย์</label>
                                      <input class="form-control border-input" placeholder="รหัสไปรษณีย์" type="number" name="zipcode" value="<%= data[0].zipcode %>">
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label>เบอร์โทรศัพท์</label>
                                      <input class="form-control border-input" placeholder="เบอร์โทรศัพท์" value="<%= data[0].phone %>" type="text" name="phone">
                                  </div>
                              </div>
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label>อาชีพ</label>
                                      <input class="form-control border-input" placeholder="อาชีพ" value="<%= data[0].occupation %>" type="text" name="occupation">
                                  </div>
                              </div>
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label for="exampleInputEmail1" style="width:47px!important; text-align:center">วันเกิด</label>
                                      <input class="form-control border-input datepicker" placeholder="วันเกิด" type="text" name="birthday" value="<%= data[0].date_of_birth %>" >
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>เพศ</label>
                                    <select class="form-control border-input" name="gender">
                                            <option value="" disabled selected hidden >กรุณาเลือกเพศ</option>
                                            <%
                                            var select = [];
                                            var options = data[0].gender;
                                            data.sql_lov_gender.forEach(data => {
                                            if (data.text == options){
                                                select.true = "selected";
                                            }
                                            else{
                                                select.true = "";
                                            }
                                        %>
                                        <option value="<%= data.id%>" <%= select.true %>><%= data.text %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label>ไอดีไลน์</label>
                                      <input class="form-control border-input" placeholder="ไอดีไลน์" value="<%= data[0].line %>" type="text" name="line">
                                  </div>
                              </div>
                              <div class="col-md-4">
                                  <div class="form-group">
                                      <label>อีเมล์</label>
                                      <input class="form-control border-input" placeholder="อีเมล์" value="<%= data[0].email %>" type="text" name="email">
                                  </div>
                              </div>
                          </div>
                          <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>กลุ่มผู้ร่วมบุญ</label>
                                    <select class="form-control border-input" name="donor_group">
                                            <option value="" disabled selected hidden >กรุณาเลือกกลุ่มผู้ร่วมบุญ</option>
                                            <%
                                            var select = [];
                                            var options = data[0].donor_group;
                                            data.sql_lov_donor_group.forEach(data => {
                                            if (data.text == options){
                                                select.true = "selected";
                                            }
                                            else{
                                                select.true = "";
                                            }
                                        %>
                                        <option value="<%= data.id%>" <%= select.true %>><%= data.text %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                          </div>
                          <div class="row">
                              <div class="col-md-12">
                                  <div class="form-group">
                                      <label>รายละเอียดเพิ่มเติม</label>
                                      <textarea rows="5" class="form-control border-input" placeholder="Here can be your description" name="comment"><%= data[0].comment%></textarea>
                                  </div>
                              </div>
                          </div>
                          <div class="text-center">
                              <button type="submit" class="btn btn-info btn-fill btn-wd">บันทึก</button>
                              <input type="hidden" class="btn btn-info btn-fill btn-wd" name="id" value="<%= data[0].id %>">
                          </div>
                          <div class="clearfix"></div>
                      </form>
                  </div>
              </div>
          </div>

      </div>

  </div>
</div>